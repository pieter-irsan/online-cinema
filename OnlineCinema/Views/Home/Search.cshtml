@model IEnumerable<OnlineCinema.Models.MovieModel>
@{ViewBag.Title = "| Search";}

@if (ViewBag.Alert != null)
{
    <div class="offset-md-4 col-md-4">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@ViewBag.Alert</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}
<div class="row pt-2">
    <h2>Search Results</h2>
    <hr />
</div>
<div class="row row-cols-2 g-3 row-cols-md-4 g-md-3">
    @if (Model != null)
    {
        foreach (var movie in Model)
        {
            <div class="col-3">
            <div class="card shadow-sm" style="cursor: pointer;" onclick="window.location='@Url.Action("Movie", "Home", new { id = movie.Id })';">
                <div class="card-body text-center">
                    @if (movie.PosterPath != null)
                    {
                        <img src="@Url.Content(movie.PosterPath)" class="card-img-top" />
                    }
                    <h5 class="card-title">@Html.DisplayFor(modelItem => movie.Title)</h5>
                    <h6 class="card-subtitle text-muted">@Html.DisplayFor(modelItem => movie.Director)</h6>
                </div>
            </div>
        </div>
        }
    }
    else
    {
        <h3>No search results found</h3>
    }
</div>