@model OnlineCinema.Models.MovieModel
@{ViewBag.Title = "| Add Movie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";}

@if (ViewBag.Success != null)
{
    <div class="row">
        <div class="offset-md-4 col-md-4">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@ViewBag.Success</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
}
else if (ViewBag.Alert != null)
{
    <div class="row">
        <div class="offset-md-4 col-md-4">
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@ViewBag.Alert</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    </div>
}
@using (Html.BeginForm("Add", "Movie", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Add Movie</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })

    @Html.LabelFor(model => model.Director, htmlAttributes: new { @class = "control-label col-md-2" })
    @Html.EditorFor(model => model.Director, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Director, "", new { @class = "text-danger" })

    @Html.LabelFor(model => model.Synopsis, htmlAttributes: new { @class = "control-label col-md-2" })
    @Html.EditorFor(model => model.Synopsis, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Synopsis, "", new { @class = "text-danger" })

    @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })

    <div class="control-label col-md-2">@Html.DisplayNameFor(movie => movie.Poster)<span class="text-danger">*</span></div>
    <input type="file" name="Poster" onchange="fileCheck(this);" class="form-control" accept="image/jpeg" />
    <small><span class="text-danger">*</span>Upload JPG or JPEG files only</small>
    @Html.HiddenFor(model => model.PosterPath)
    <br />
    @Html.LabelFor(model => model.Trailer, htmlAttributes: new { @class = "control-label col-md-2" })
    @Html.EditorFor(model => model.Trailer, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Trailer, "", new { @class = "text-danger" })

    <div class="mt-2">
        <a class="btn btn-secondary" type="button" href="@Url.Action("Index", "Movie")">Back</a>
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
}